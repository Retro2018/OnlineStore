@model IEnumerable<string>

 @* Display all categories and create links to them*@

<div>
    @Html.ActionLink("Домой", "List", "Books", null, new {@class = " borderbtn btn btn-block btn-default btn-lg " })

    @foreach (var link in Model)
    {
        @Html.RouteLink(link, new
        {
            controller = "Books",
            action = "List",
            genre = link,
            page = 1
        }, new
        {
            @class = " borderbtn btn btn-block btn-default btn-lg" + 
            (link == ViewBag.SelectedGenre ? " btn-primary" : "")
        })
    }
</div>